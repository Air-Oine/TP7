<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.tp7.MainActivity2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button_question_2_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question2_ok"
        android:layout_alignBaseline="@+id/button_question_2_cancel"
        android:layout_alignBottom="@+id/button_question_2_cancel"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_question_2_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_incomprise"
        android:onClick="cancel"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
